<div class="container-fluid">
  <%= form_with(model: package, id: "package-form") do |form| %>
    <% if package.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

        <ul>
          <% package.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mt-4">
      <%= form.label :package_name %>
      <%= form.text_field :package_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= form.label :description %>
      <%= form.text_area :description, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= form.label :weight %>
      <%= form.number_field :weight, autocomplete: "email", class: "form-control", step: :any %>
    </div>

    <div class="actions mt-4">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
